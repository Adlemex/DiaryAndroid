<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/msgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0"
            android:text="Сергеева Светлана Анатольевна"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:text="•" />

        <TextView
            android:id="@+id/msgdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="15:35"
            android:textSize="12sp" />

        <ImageView

            android:id="@+id/unread"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="0"
            android:visibility="invisible"
            app:srcCompat="@drawable/sale" />
    </LinearLayout>

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:text="Текст сообщения Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam maximus pretium ligula, eget vestibulum nulla. Integer augue mauris, gravida sed libero non, condimentum rutrum ante. Sed sodales efficitur nibh, quis vulputate massa bibendum vitae. In porttitor luctus massa, et mollis lectus interdum ut. Donec ex felis, porttitor a leo sed, ornare mollis orci. Proin luctus pulvinar orci. Proin pharetra commodo nunc. Nulla non tellus eget enim aliquet sagittis. "
        android:textSize="18sp" />
</LinearLayout>