<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<com.google.android.material.card.MaterialCardView

    android:layout_width="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:strokeColor="@android:color/transparent"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dopImage"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|start"
                android:autoSizeMaxTextSize="16sp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:width="175dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:text="Набор в ЗФТШ ЗФТШ "/>
            <TextView
                android:id="@+id/dopText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|start"
                android:textSize="10sp"
                android:width="175dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="В заочную физико-техническую школу открылся набор, поторопитесь! В заочную физико-техническую школу открылся набор, поторопитесь! В заочную физико-техническую школу открылся набор, поторопитесь! "/>
        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
</LinearLayout>