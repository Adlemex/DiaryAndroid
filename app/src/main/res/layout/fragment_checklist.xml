                    android:layout_marginHorizontal="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Домашнее задание" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Урок 2" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
