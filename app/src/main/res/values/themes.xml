    <style name="Theme.MaterialDiary.LightDynamic" parent="Theme.Material3.DynamicColors.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.MaterialDiary.DarkDynamic" parent="Theme.Material3.DynamicColors.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="Theme.MaterialDiary.Dark" parent="Theme.Material3.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="Theme.MaterialDiary.Light" parent="Theme.Material3.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="App.Dialog.DateTime" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/App.Dialog.NegativeButton</item>

        <!--  For overScrollMode  -->
        <item name="android:colorEdgeEffect">?attr/colorControlNormal</item>
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

    <style name="App.Dialog.NegativeButton" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.MaterialDiary" parent="Base.Theme.MaterialDiary" />

    <style name="Theme.MaterialDiary.AppWidgetContainerParent" parent="Theme.Material3.DayNight">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MaterialDiary.AppWidgetContainer" parent="Theme.MaterialDiary.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
